---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import arrowdark from "../assets/images/arrowdarksmall.svg";
import TrustpilotCard from "../components/TrustpilotCard.astro";
import SmallCard from "../components/SmallCard.astro";
---

<MainLayout title="Titel">
  <article>
    <h1 class="bg-orange-500 mt-11xl font-display">Index overskrift</h1>
    <Button class="">Klik!</Button>
    <p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
    <Image src={thumbsup} alt="" />
  </article>
  <TrustpilotCard url="#" name="Fornavn Efternavn" date="00. januar 2024" anmeldelse="Her stÃ¥r en anmeldelse." />
  <section class="grid grid-flow-col gap-xs">
    <SmallCard />
    <SmallCard />
    <SmallCard />
  </section>

  <a href="/#">
    <Button variant="primary" size="xsmall" length="lengthxsmall" icon="arrowdarkmedium.svg" iconalt="pil">xsmall Secondary</Button>
  </a>

  <Button variant="secondary" size="xsmall" length="lengthxsmall" icon="arrowdarkmedium.svg" iconalt="pil">xsmall Secondary</Button>
  <Button variant="primary" size="small" length="lengthmedium">small Primary</Button>
  <Button variant="secondary" size="small" length="lengthsmall">small Secondary</Button>
  <Button variant="primary" size="medium" length="lengthmedium">medium Secondary</Button>
  <Button variant="secondary" size="medium" length="lengthmedium">medium Secondary</Button>
  <Button variant="primary" size="large" length="lengthxxlarge">large Secondary</Button>
  <Button variant="secondary" size="large" length="lengthmedium">large Secondary</Button>
  <Button variant="secondary" size="xlarge" length="lengthmedium">large Secondary</Button>
</MainLayout>
