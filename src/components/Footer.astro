---
import { Image } from "astro:assets";
import facebook from "../assets/images/facebook.svg";
import instagram from "../assets/images/instagram.svg";
import youtube from "../assets/images/youtube.svg";
import mail from "../assets/images/mail.svg";
import skype from "../assets/images/skype.svg";
import linkedin from "../assets/images/linkedin.svg";
import samarbejdspartnere from "../assets/images/samarbejdspartnere.png";
---

<section class="bg-brown-100 px-[124px] pt-[64px] pb-m">
  <div class="flex justify-between border-b-2 pb-ml">
    <div class="flex flex-col gap-s">
      <p class="font-display text-footer font-bold uppercase">Højskolen</p>
      <p class="font-sans text-p font-regular">Rosenørns Allé 29</p>
      <p class="font-sans text-p font-regular">1970 Frederiksberg</p>
      <p class="font-sans text-p font-regular">Danmark</p>
      <div class="flex gap-xs">
        <Image src={facebook} alt="Facebookikon" />
        <Image src={instagram} alt="Instagramikon" />
        <Image src={youtube} alt="Youtubeikon" />
      </div>
    </div>
    <div class="flex flex-col gap-s">
      <p class="font-display text-footer font-bold uppercase">Kontakt</p>
      <p class="font-sans text-p font-regular">Telefon: 70 27 90 07</p>
      <p class="font-sans text-p font-regular">Mandag til fredag kl. 10.00-16.00</p>
      <p class="font-sans text-p font-regular">Mail: info@hojskolendk.dk</p>
      <div class="flex gap-xs">
        <Image src={mail} alt="Mailikon" />
        <Image src={skype} alt="Skypeikon" />
        <Image src={linkedin} alt="Linkedinikon" />
      </div>
    </div>
    <div>
      <p class="font-display text-footer font-bold uppercase">Samarbejdspartnere</p>
      <Image src={samarbejdspartnere} alt="Samarbejdspartnere" />
    </div>
  </div>
  <div class="flex justify-between pt-m">
    <p class="font-sans text-p font-regular">HØJSKOLENDK er medlem af rejsegarantifonden</p>
    <p class="font-sans text-p font-regular">Handelsbetingelser / Cookiepolitik / Data- og Privatlivspolitik</p>
    <p class="font-sans text-p font-regular">Copyright HØJSKOLENDK 2022 - CVR 32491162</p>
  </div>
</section>
